<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="10" fx:controller="org.example.TreeViewController">
   <TreeView fx:id="treeView">
      <TreeItem value="Root">
         <children>
            <TreeItem value="Folder 1">
               <children>
                  <TreeItem value="File 1"/>
                  <TreeItem value="File 2"/>
               </children>
            </TreeItem>
            <TreeItem value="Folder 2">
               <children>
                  <TreeItem value="File 3"/>
               </children>
            </TreeItem>
         </children>
      </TreeItem>
   </TreeView>
   <HBox spacing="10">
      <Button text="Eliminar" onAction="#deleteFile" />
   </HBox>
</VBox>
